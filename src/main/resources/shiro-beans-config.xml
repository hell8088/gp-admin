<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
		<property name="securityManager" ref="securityManager" /> 	<!-- 管理器，必须设置 -->
		<property name="loginUrl" value="/login" /> 				<!-- 拦截到，跳转到的地址,通过此地址去认证 -->
		<property name="filterChainDefinitions">
			<value>
				/assets/** = anon									<!-- 静态资源 -->
				/user/** = anon
				/resource/** = anon
				/** = authc
			</value>
		</property>
	</bean>

	<bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
		<property name="realm" ref="customerRealm" />
	</bean>
	
	<!-- 自定义Realm -->
	<bean id="customerRealm" class="com.gp.admin.permission.service.CustomerRealm">
		<!-- <property name="cachingEnabled" value="true" /> -->
		<!-- <property name="authenticationCachingEnabled" value="true" /> -->
		<!-- <property name="authorizationCachingEnabled" value="true" /> -->

		<!-- 定义凭证匹配器(加密) -->
		<!-- <property name="credentialsMatcher" ref="credentialsMatcher"></property> -->
	</bean>

</beans>
